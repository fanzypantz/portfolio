{
  "compilerOptions": {
    "declaration": true,
    "baseUrl": "./src",
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "checkJs": false,
    "allowJs": true,
    "moduleResolution": "node",
    "types": ["node"],
    "lib": ["es6", "dom"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowUnreachableCode": false,
    "noEmit": false,
    "incremental": false,
    "isolatedModules": true,
    "jsx": "preserve",
    "paths": {
      "@components/*": ["./components/*"],
      "@middlewares/*": ["./middlewares/*"],
      "@constants/*": ["./constants/*"],
      "@utils/*": ["./components/utils/*"],
      "@api/*": ["./api/*"]
    }
  },
  "include": ["./src/**/*.ts"],
  "exclude": [
    "./node_modules",
    "./node_modules/*",
    "./node_modules/@types/node/index.d.ts",
    "./dist"
  ]
}
