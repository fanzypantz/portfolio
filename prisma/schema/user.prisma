enum Role {
  admin
  user
  guest
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  email     String   @unique
  password  String?
  role      Role     @default(guest)
  blocked   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
